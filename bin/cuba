#!/usr/bin/env ruby

if ARGV.empty?
  puts "usage: cuba [s *args]"
  exit
end

lib = File.expand_path('../../lib', __FILE__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)

require "cuba/bin"
require "clap"

Clap.run ARGV,
  "s"      => Cuba::Bin.method(:server),
  "-v"      => -> { puts Cuba::Bin::VERSION }
